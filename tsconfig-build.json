{
    "compilerOptions": {
        "declaration": true,
        "module": "es2015",
        "target": "es5",
        "moduleResolution":"node",
        "noImplicitAny": false,
        "sourceMap": true,
        "allowJs": false,
        "watch": false,
        "listEmittedFiles": false,
        "listFiles": true,
        "alwaysStrict": true,
        "experimentalDecorators": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        "rootDir": "."
    },
    "exclude": [
        "node_modules", "dist", "_mock", "./*.*", "test", "src/__test__/**", "src/output/**"
    ]
}